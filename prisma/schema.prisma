// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id
  name        String
  email       String @unique
  password    String
  cpf         String
  telefone    String
  dateOfBirth String
  description String
  seller      Boolean
  createdAt   String

  cars Car[]

  @@map("users")
}

model Car {
  id          String @id
  brand       String
  year        Int
  color       String
  milage      Int
  model       String
  fuel        FuelType
  price       Decimal
  description String
  coverPhoto  String
  gallery      String[]
  published   String
  createdAt   String

  userId      String
  user User @relation(fields: [userId], references: [id])

  @@map("cars")
}

enum FuelType {
  Flex
  Gasolina
  Etanol
  Diesel
}